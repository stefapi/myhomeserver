# -*- coding: utf-8 -*-

root = true

[*]
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_size = 4

# Python files
[*.py]
indent_size = 4
# isort plugin configuration
known_first_party = flask_security
multi_line_output = 2
default_section = THIRDPARTY
indent_style = space

# RST files (used by sphinx)
[*.rst]
indent_size = 4

# CSS, HTML, JS, JSON, YML
[*.{css,html,js,json,yml,vue}]
indent_size = 2
indent_style = space

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_size = 2

# Dockerfile
[Dockerfile]
indent_size = 4

# Tab indentation
[Makefile]
indent_style = tab
